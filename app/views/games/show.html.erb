<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Player 1:</strong></dt>
  <dd><%= @game.player_1.name %></dd>
  <dt><strong>Player 2:</strong></dt>
  <dd><%= @game.player_2.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_1_score) %>:</strong></dt>
  <dd><%= @game.player_1_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_2_score) %>:</strong></dt>
  <dd><%= @game.player_2_score %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
