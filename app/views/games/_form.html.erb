<%= form_for @game do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :player_1_id, :class => 'control-label' %>
        <%= f.collection_select :player_1_id, Player.all, :id, :name, {}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :player_2_id, :class => 'control-label' %>
        <%= f.collection_select :player_2_id, Player.all, :id, :name, {}, {class: 'form-control'} %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :player_1_score, class: 'control-label' %>
        <%= f.text_field :player_1_score, type: "number",  min: "0", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :player_2_score, class: 'control-label' %>
        <%= f.text_field :player_2_score, type: "number",  min: "0", class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                games_path, :class => 'btn' %>
  </div>
<% end %>
