<%- model_class = Game -%>
<div class="page-header">
  <div class='col-md-10'>
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
  <div class='col-md-2'>
    <%= link_to "Home", :root, style: 'vertical-align: middle', class: 'btn btn-primary btn-lg pull-right' %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Player 1</th>
      <th>Player 2</th>
      <th><%= model_class.human_attribute_name(:player_1_score) %></th>
      <th><%= model_class.human_attribute_name(:player_2_score) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.id, game_path(game) %></td>
        <td class="<%='winner' if game.player_1_winner?%>">
            <%= game.player_1.name %>
        </td>
        <td class="<%='winner' if game.player_2_winner?%>">
            <%= game.player_2.name %>
        </td>
        <td><%= game.player_1_score %></td>
        <td><%= game.player_2_score %></td>
        <td><%=l game.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_game_path(game), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      game_path(game),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_game_path,
            :class => 'btn btn-primary' %>
